section.partitions-options
  .partitions-options__wrapper
    h2.partitions-options__title Варианты зонирования:

    .partitions-swiper-container
      .swiper-wrapper
        -
          const partitions_items = [
            {type: 'Для офиса', description: 'Для офиса', url: 'img/part_opt1', lqip: 'img/lqip/part_opt1'},
            {type: 'В гостиную', description: 'В гостиную', url: 'img/part_opt2', lqip: 'img/lqip/part_opt2'},
            {type: 'Для спальни', description: 'Для спальни', url: 'img/part_opt3', lqip: 'img/lqip/part_opt3'},
            {type: 'На кухню', description: 'На кухню', url: 'img/part_opt4', lqip: 'img/lqip/part_opt4'},
            {type: 'В салон красоты', description: 'В салон красоты', url: 'img/part_opt5', lqip: 'img/lqip/part_opt5'},
            {type: 'В опенсейс', description: 'В опенсейс', url: 'img/part_opt6', lqip: 'img/lqip/part_opt6'},

          ];
        each partitions_item in partitions_items
          .swiper-slide
            picture
              source(type="image/webp" srcset=partitions_item.lqip + '@1x.jpg' data-srcset=partitions_item.url + '@1x.webp 1x,' + partitions_item.url + '@2x.webp 2x')
              img.partitions_img.lazyload.blur-up(src=partitions_item.lqip + '@1x.jpg' data-src=partitions_item.url + '@1x.jpg' data-srcset=partitions_item.url + '@2x.jpg 2x' alt=partitions_item.description)
            .partitions-options__overlay
              p.partitions-options__overlay-text=partitions_item.type


      <!-- Add Pagination -->
      .part-swiper-pagination

      <!-- Add Arrows -->
      .part-swiper-button-next
      .part-swiper-button-prev
