section.partitions-options
  .partitions-options__wrapper
    h2.partitions-options__title Варианты зонирования:

    .partitions-swiper-container.blur
      .swiper-wrapper
        -
          const partitions_items = [
            {type: 'Для офиса', description: 'Для офиса', url: 'img/static/partitions_page/part_opt1', lqip: 'img/lqip/partitions_page/part_opt1', width: 357, height: 457},
            {type: 'В гостиную', description: 'В гостиную', url: 'img/static/partitions_page/part_opt2', lqip: 'img/lqip/partitions_page/part_opt2', width: 433, height: 457},
            {type: 'Для спальни', description: 'Для спальни', url: 'img/static/partitions_page/part_opt3', lqip: 'img/lqip/partitions_page/part_opt3', width: 496, height: 457},
            {type: 'На кухню', description: 'На кухню', url: 'img/static/partitions_page/part_opt4', lqip: 'img/lqip/partitions_page/part_opt4', width: 596, height: 457},
            {type: 'В салон красоты', description: 'В салон красоты', url: 'img/static/partitions_page/part_opt5', lqip: 'img/lqip/partitions_page/part_opt5', width: 328, height: 457},
            {type: 'В опенспейс', description: 'В опенсейс', url: 'img/static/partitions_page/part_opt6', lqip: 'img/lqip/partitions_page/part_opt6', width: 597, height: 457},

          ];
        each partitions_item in partitions_items
          .swiper-slide
            picture
              source(type="image/webp" srcset=partitions_item.lqip + '@1x.jpg' data-srcset=partitions_item.url + '@1x.webp 1x,' + partitions_item.url + '@2x.webp 2x')
              img.partitions_img.lazyload.blur-up(src=partitions_item.lqip + '@1x.jpg' data-src=partitions_item.url + '@1x.jpg' data-srcset=partitions_item.url + '@2x.jpg 2x' width=partitions_item.width height=partitions_item.height alt=partitions_item.description)
            .partitions-options__overlay
              p.partitions-options__overlay-text=partitions_item.type


      <!-- Add Pagination -->
      .part-swiper-pagination

      <!-- Add Arrows -->
      .part-swiper-button-next
      .part-swiper-button-prev
