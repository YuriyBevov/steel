          img.loft-construction__img.loft-construction__img--accordeon.lazyload.blur-up(src="img/lqip/static/part-swing@1x.png" data-src="../img/static/part-swing@1x.png" data-srcset="img/static/part-swing@2x.png 2x" width="100" height="144" alt="Вариант распашной перегородки")
