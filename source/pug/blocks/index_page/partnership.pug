section.partnership
  .partnership__wrapper
    .partnership__content
      h2.partnership__title СОТРУДНИЧЕСТВО
      p.partnership__description
        | работаем с дизайнерами, с выставочными и&nbsp;офисными пространствами,
        | пекарнями, отелями, барами, ресторанами, магазинами.

      strong.partnership__offer Хотите сотрудничать с нами?
      p.partnership__mail Оставьте свое сообщение на почте: <a href="mailto:stballs@mail.ru">stballs@mail.ru</a>

    .partnership__slider
      .partnership__swiper-container
        .swiper-wrapper
          -
            const partners = [
              {description: 'Au pont rouge', url: 'img/static/rouge',},
              {description: 'Новая сцена Александринского театра', url: 'img/static/theatre'},
              {description: 'Kivennapa', url: 'img/static/kivennapa'},
              {description: 'Циферблат. Свободное пространство', url: 'img/static/clockface'},
              {description: 'Balcon Lounge bar', url: 'img/static/balcon'},
              {description: 'Greenpeace', url: 'img/static/greenpeace'},
              {description: 'Prosto Vino', url: 'img/static/vino'},
              {description: 'Культурная столица', url: 'img/static/capital'},
            ];
          each partner in partners
            .swiper-slide
              picture
                source(type="image/webp" data-srcset=partner.url + '@1x.webp 1x,' + partner.url + '@2x.webp 2x')
                img.lazyload.blur-up(data-src=partner.url + '@1x.png' data-srcset=partner.url + '@2x.png 2x' alt=partner.description)

        // slider navigation

        .p-swiper-button-next
        .p-swiper-button-prev
