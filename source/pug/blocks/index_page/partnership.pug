section.partnership
  .partnership__wrapper
    .partnership__content
      h2.partnership__title СОТРУДНИЧЕСТВО
      p.partnership__description
        | Работаем с дизайнерами, с выставочными и&nbsp;офисными пространствами,
        | пекарнями, отелями, барами, ресторанами, магазинами.

      strong.partnership__offer Хотите сотрудничать с нами?
      p.partnership__mail Оставьте свое сообщение на почте: <a href="mailto:stballs@mail.ru" aria-label="Оставьте свое сообщение на почте: stballs@mail.ru">stballs@mail.ru</a>

    .partnership__slider
      .partnership__swiper-container
        .swiper-wrapper
          -
            const partners = [
              {description: 'Au pont rouge', url: 'img/static/rouge', lqip: 'img/lqip/rouge'},
              {description: 'Новая сцена Александринского театра', url: 'img/static/theatre', lqip: 'img/lqip/theatre'},
              {description: 'Kivennapa', url: 'img/static/kivennapa', lqip: 'img/lqip/kivennapa'},
              {description: 'Циферблат. Свободное пространство', url: 'img/static/clockface', lqip: 'img/lqip/clockface'},
              {description: 'Balcon Lounge bar', url: 'img/static/balcon', lqip: 'img/lqip/balcon'},
              {description: 'Greenpeace', url: 'img/static/greenpeace', lqip: 'img/lqip/greenpeace'},
              {description: 'Prosto Vino', url: 'img/static/vino', lqip: 'img/lqip/vino'},
              {description: 'Культурная столица', url: 'img/static/capital', lqip: 'img/lqip/capital'},
              {description: 'Лофт проект "Этажи"', url: 'img/static/loft_project', lqip: 'img/lqip/loft_project'},
              {description: 'Сеть студий маникюра "PILKI"', url: 'img/static/pilki', lqip: 'img/lqip/pilki'},
              {description: 'Advertising agency SCS GROUP', url: 'img/static/scs', lqip: 'img/lqip/scs'},
              {description: 'Head hunter', url: 'img/static/hh', lqip: 'img/lqip/hh'},
              {description: 'Теплосеть Санкт-Петербурга', url: 'img/static/teplo', lqip: 'img/lqip/teplo'},
              {description: 'Сервис BMV и MINI в Санкт-Петербурге', url: 'img/static/bmv', lqip: 'img/lqip/bmv'},
              {description: 'Невские сыры. Холдинговая компания', url: 'img/static/cheese', lqip: 'img/lqip/cheese'},
              {description: 'Александр недвижимость', url: 'img/static/alex', lqip: 'img/lqip/alex'},
            ];
          each partner in partners
            .swiper-slide
              picture
                source(type="image/webp" srcset=partner.lqip + '@1x.png' data-srcset=partner.url + '@1x.webp 1x,' + partner.url + '@2x.webp 2x')
                img.lazyload.blur-up(src=partner.lqip + '@1x.png' data-src=partner.url + '@1x.png' data-srcset=partner.url + '@2x.png 2x' alt=partner.description)

        // slider navigation

        .p-swiper-button-next
        .p-swiper-button-prev
