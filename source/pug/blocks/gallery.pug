section.gallery
  .gallery__wrapper
    .gallery__header
      h2.gallery__title мы в ИНСТАГРАМ
      p.gallery__description еще больше мебели и рабочих моментов

    ul.gallery__list
      -
        const photos = [
          {description: 'Межкомнатная перегородка', url: 'img/gal_1'},
          {description: 'Стол на декоративных ножках', url: 'img/gal_2'},
          {description: 'Перегородка для кухни', url: 'img/gal_3'},
          {description: 'Перегородка в офис', url: 'img/gal_4'},
          {description: 'Межкомнатная перегородка', url: 'img/gal_1'},
          {description: 'Стол на декоративных ножках', url: 'img/gal_2'},
          {description: 'Перегородка для кухни', url: 'img/gal_3'},
          {description: 'Перегородка в офис', url: 'img/gal_4'},
        ];
      each photo in photos
        li.gallery__item
          picture
            source(type="image/webp" srcset=photo.url + '@1x.webp 1x,' + photo.url + '@2x.webp 2x')
            img.gallery__img(src=photo.url + '@1x.jpg' srcset=photo.url + '@2x.jpg 2x' alt=photo.description)

    a(href="#").gallery__link.m-link посмотреть
      svg(width="52" height="3")
        use(xlink:href="#icon-arr")
